{
	"repositories": [
		{ "type": "path", "url": "packages/*" },
		{ "type": "composer", "url": "https://composer.typo3.org/" },
		{ "type": "composer", "url": "https://packages.sudhaus7.de/" }
	],
	"name": "sudhaus7/default-sitepackage",
	"description" : "Sudhaus7 TYPO3 CMS Base Sitepackage",
	"license": "GPL-2.0-or-later",
	"config": {
		"platform": {
			"php": "7.2"
		}
	},

	"require": {
		"helhum/typo3-secure-web": "^0.2.5",
		"helhum/typo3-console": "^5.7",
		"typo3/cms-backend": "~10.1.0",
		"typo3/cms-core": "~10.1.0",
		"typo3/cms-extbase": "~10.1.0",
		"typo3/cms-extensionmanager": "~10.1.0",
		"typo3/cms-filelist": "~10.1.0",
		"typo3/cms-fluid": "~10.1.0",
		"typo3/cms-frontend": "~10.1.0",
		"typo3/cms-install": "~10.1.0",
		"typo3/cms-recordlist": "~10.1.0",

		"typo3/cms-about": "~10.1.0",
		"typo3/cms-belog": "~10.1.0",
		"typo3/cms-beuser": "~10.1.0",
		"typo3/cms-felogin": "~10.1.0",
		"typo3/cms-fluid-styled-content": "~10.1.0",
		"typo3/cms-form": "~10.1.0",
		"typo3/cms-impexp": "~10.1.0",
		"typo3/cms-info": "~10.1.0",
		"typo3/cms-rte-ckeditor": "~10.1.0",
		"typo3/cms-setup": "~10.1.0",
		"typo3/cms-seo": "~10.1.0",
		"typo3/cms-sys-note": "~10.1.0",
		"typo3/cms-t3editor": "~10.1.0",
		"typo3/cms-tstemplate": "~10.1.0",
		"typo3/cms-viewpage": "~10.1.0"
	},


	"require-dev": {
		"typo3-console/composer-typo3-auto-install": "dev-master",
		"nimut/testing-framework": "^4.1",
		"phpunit/phpunit": "*",
		"typo3/cms-adminpanel": "~10.1.0",
		"ichhabrecht/filefill": "^3.0",
		"christianessl/impersonate": "^1.0"
	},
	"extra": {
		"typo3/cms": {
			"cms-package-dir": "{$vendor-dir}/typo3/cms",
			"web-dir": "public",
			"root-dir": "private"
		},
		"helhum/dotenv-connector": {
			"env-file": ".env"
		},
		"helhum/typo3-console": {
			"install-extension-dummy": "0"
		}
	},
	"scripts": {
		"addtrustedhostpattern": "@php vendor/bin/typo3cms configuration:set SYS/trustedHostsPattern '.*'",
		"addfilefillconfig": "@php vendor/bin/typo3cms configuration:set EXTCONF/filefill/storages/1 '[{\"identifier\":\"sys_domain\"},{\"identifier\":\"placeholder\"}]' --json",
		"killcache": "@php vendor/bin/typo3cms cache:flush",
		"generatepackagestates": "@php vendor/bin/typo3cms install:generatepackagestates",
		"extensionsetupifpossible": "@php vendor/bin/typo3cms install:extensionsetupifpossible",
		"typo3install": [
			"@generatepackagestates",
			"@extensionsetupifpossible",
			"@addtrustedhostpattern",
			"@addfilefillconfig"
		],

		"post-autoload-dump": [
			"@typo3install"
		]
	}
}
